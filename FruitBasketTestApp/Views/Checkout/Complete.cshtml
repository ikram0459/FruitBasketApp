
@model FruitBasketTestApp.Models.CompletedOrderViewModel
@{
    ViewBag.Title = "Checkout Complete";
}


<h3>
    Checkout Complete:
</h3>
@{

    if (Model.products.Count > 0)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Order Summary</h3>
            </div>
            <div class="panel-body">
                <div id="update-message">
                </div>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>
                                Fruit
                            </th>
                            <th>
                                Quantity
                            </th>
                           
                            <th>
                                Total
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Shipping Address
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.products)
                    {
                        <tr id="row-@item.Name">
                            <td>
                               @item.Fruit
                            </td>
                            <td>
                               @item.Quantity
                            </td>
                            <td>
                                @item.ItemTotal
                            </td>
                            
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.ShippingAddress
                            </td>
                        </tr>
                    }
                    <tr class="info">
                        <td>
                            Total
                        </td>
                        <td></td>
                        <td></td>
                        <td id="cart-total">
                            @Model.SubTotal
                        </td>
                    </tr>
                </table>
               
            </div>
        </div>
    }
    else
    {
        <div>
            <p>
                No orders completed.
            </p>
        </div>
    }
}



